<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ORM.Pages.Inventario"
             Title="Inventario">
    
    <VerticalStackLayout>
        <SearchBar Placeholder="Buscar articulo..."/>

        <Entry x:Name="NameEntry" Placeholder="Name"/>
        <Entry x:Name="DescriptionEntry" Placeholder="Description"/>
        <Button Text="Add Item" Clicked="OnAddItemClicked"/>
        <ListView x:Name="ItemsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Name}" HorizontalOptions="StartAndExpand" VerticalOptions="Center" />
                            <Label Text="{Binding Description}" HorizontalOptions="StartAndExpand" VerticalOptions="Center" />
                            <Button Text="Editar" Clicked="OnEditItemClicked" CommandParameter="{Binding .}" />
                            <Button Text="Eliminar" Clicked="OnDeleteItemClicked" CommandParameter="{Binding .}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>